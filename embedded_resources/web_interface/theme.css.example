/*
 * Bruce WebUI - Custom Theme Example
 * 
 * Copy this file to theme.css and customize the colors
 * to create your own theme for Bruce WebUI.
 * 
 * The theme will be automatically loaded by the interface.
 */

:root {
  /* Primary Colors - Main accent color */
  --primary: #00ff88;           /* Main accent color (buttons, highlights) */
  --primary-dark: #00cc6a;      /* Darker shade for gradients */
  --primary-light: #33ff9f;     /* Lighter shade */
  
  /* Status Colors */
  --success: #28a745;           /* Success/Online status */
  --warning: #ffc107;           /* Warning/Attention */
  --danger: #dc3545;            /* Danger/Error/Delete */
  --info: #17a2b8;              /* Info/Help */
  
  /* Background Colors */
  --bg-dark: #0a0a0f;           /* Main background */
  --bg-darker: #050508;         /* Darker background (inputs, code) */
  --bg-card: #12121a;           /* Card background */
  --bg-card-hover: #1a1a25;     /* Card hover state */
  --bg-sidebar: #0d0d14;        /* Sidebar background */
  
  /* Border Colors */
  --border-color: #2a2a3a;      /* Main border color */
  --border-light: #3a3a4a;      /* Lighter border */
  
  /* Text Colors */
  --text-primary: #ffffff;      /* Primary text */
  --text-secondary: #a0a0b0;    /* Secondary text (labels, descriptions) */
  --text-muted: #606070;        /* Muted text (hints, placeholders) */
  
  /* Shadows */
  --shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
  --shadow-lg: 0 8px 40px rgba(0, 0, 0, 0.6);
  --shadow-glow: 0 0 20px rgba(0, 255, 136, 0.3);
  
  /* Layout */
  --sidebar-width: 260px;
  --sidebar-collapsed: 70px;
  --header-height: 60px;
  
  /* Border Radius */
  --border-radius: 12px;
  --border-radius-sm: 8px;
  --border-radius-lg: 16px;
  
  /* Transitions */
  --transition-fast: 0.15s ease;
  --transition-normal: 0.3s ease;
  --transition-slow: 0.5s ease;
}

